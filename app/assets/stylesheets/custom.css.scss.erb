@import "bootstrap-sprockets";
@import "bootstrap";


// Variables & Mixins

$osu-orange: #C34500;
$gray-medium-light: #eaeaea;

<%# @mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
} %>


// Universal

<%# section {
  overflow: auto;
  margin-bottom: 10px;
} %>

nav.paginator {
  display: block;
  margin: 0 0 2em 0;
}

ul.pagination {
  margin: 0px;
}

.pagination li a {
  color: $osu-orange;
  &:hover {
    color: lighten($osu-orange, 5%);
  }
}

.pagination li.active a {
  background-color: $osu-orange;
  border-color: $osu-orange;
  &:hover {
    background-color: $osu-orange;
    border-color: $osu-orange;
  }
}


// Header

a.navbar-brand img {
  height: 48px;
  margin-top: -14px;
}


<%# .debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box-sizing;
} %>


// Sign In

.sign-in {
  text-align: center;
  margin-top: 5rem;
  margin-bottom: 20rem;
  img {
    width: 191px;
    height: 46px;
  }
}

// Model indexes

ul.indexing {
  list-style: none;
  margin: 0;
  padding: 0;
  margin-bottom: 25px;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid $gray-lighter;
  }
  li.photo_list {
    img {
      width: 50px;
      height: 50px;
    }
    h3 {
      margin: 0px;
    }
    h4 {
      margin: 0px;
    }
  }
}

#map {
  height: 720px;
}